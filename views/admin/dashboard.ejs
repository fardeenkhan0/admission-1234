<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
  crossorigin="anonymous"
></script>

<br /><br />
<h1 class="mt-5"><center>All Courses Display Access</center></h1>
<div class="container">
  <table class="table text-center table-bordered table-responsive">
    <thead class="table-warning">
      <tr>
        <th>S No.</th>
        <th>Name</th>
        <th>Course</th>
        <th>Status</th>
        <th>Comment</th>
        <th></th>
        <th>Action</th>
      </tr>
    </thead>
    <% i =1 %> 
    <% c.forEach((admin)=>{ %>
    <tbody class="table-success">
      <tr>
        <td><%= i++ %></td>
        <td><%= admin.name %></td>
        <td><%= admin.course %></td>
        <td><%= admin.status %></td>
        <td>
            <form action="/admin/update_status/<%= admin._id %>"  method="post">
                <textarea name="comment" class="form-control" ></textarea>
                <input type="hidden" name="name" value="<%= admin.name %>" >
                <input type="hidden" name="email" value="<%= admin.email %>" >

        </td>
        <td>
            <button type="submit" name="status" class="btn btn-info" value="approved">Approved</button>
            <button type="submit" name="status" class="btn btn-danger" value="reject">rejected</button>
        </form>

        </td>
        <td>
            <a href="/course_view/<%= admin._id %>" class="btn btn-info">View</a>
            <a href="/course_edit/<%= admin._id %>" class="btn btn-success">Edit</a>
            <a href="/course_delete/<%= admin._id %>" class="btn btn-danger">Delete</a>
        </td>
      </tr>
    </tbody>
    <% }) %>
  </table>
</div>
