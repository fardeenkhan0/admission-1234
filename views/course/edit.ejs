<%- include('../header.ejs') %> <br /><br />
<h1 class="mt-5 text-center bg-info">Course Edit</h1>

<div class="container">
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <form action="/course_update/<%= d._id %>" method="post">
        <div class="mb-3">
          <label>Name</label>
          <input
            type="text"
            name="name"
            value="<%= d.name %>"
            class="form-control"
          />
        </div>
        <div class="mb-3">
          <label>Email</label>
          <input
            type="text"
            value="<%= d.email %>"
            name="email"
            class="form-control"
          />
        </div>
        <div class="mb-3">
          <label>Phone No.</label>
          <input
            type="number"
            value="<%= d.phone %>"
            name="phone"
            class="form-control"
          />
        </div>
        <div class="mb-3">
          <label>D.O.B</label>
          <input
            type="date"
            value="<%= d.dob %>"
            name="dob"
            class="form-control"
          />
        </div>
        <div class="mb-3">
          <label>Address</label>
          <textarea class="form-control" name="address">
            <%= d.address %>
          </textarea>
        </div>
        <div class="mb-3">
          <label>Gender</label>
          <input type="radio" value="male" name="gender" />Male
          <input type="radio" value="female" name="gender" />FeMale
        </div>
        <div class="mb-3">
          <label>Education:</label>
          <select class="form-control" name="education">
            <option>selete college</option>
            <option value="10th">10th</option>
            <option value="12th">12th</option>
          </select>
        </div>
        <div class="mb-3">
          <label>Course</label>
          <input
            type="text"
            name="course"
            value="btech"
            readonly
            class="form-control"
          />
        </div>
        <div style="width: 50%" class="click">
          <button type="submit" class="btn bg-light">Update</button>
        </div>
      </form>
    </div>
    <div class="col-md-4"></div>
  </div>
</div>

<%- include('../footer.ejs') %>
