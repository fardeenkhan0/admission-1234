<%- include('../header.ejs') %> <br /><br />
<h1 class="mt-5">Course Display</h1>

<% if(msg.length>0){ %>

<div class="alert alert-success"><%= msg %></div>

<% } %>

<table class="table text-center">
  <tr>
    <th>id</th>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Status</th>
    <th>Action</th>
  </tr>
  <% d.forEach((item)=>{ %>
  <tr>
    <td><%= item._id %></td>
    <td><%= item.name %></td>
    <td><%= item.email %></td>
    <td><%= item.phone %></td>
    <td class="table-info"><%= item.status %></td>
    <td>
      <div class="social-icons">
        <a href="/course_view/<%= item._id %>" class="fb"
          ><i class="fa-solid fa-eye"></i
        ></a>
        <a href="/course_edit/<%= item._id %>" class="twitter"
          ><i class="fa-solid fa-pen-to-square"></i
        ></a>
      </div>

      <!-- <a href="/course_delete/<%= item._id %>" class="btn btn-danger">Delete</a> -->
    </td>
  </tr>

  <% }) %>
</table>
<center>
  <!-- <a href="/home" class="btn btn-info btn-lg">Back To Home</a> -->
  <div class="icon arrow social-icons">
    <a href="/home"><i class="fas fa-arrow-left"></i></a>
  </div>
</center>

<%- include('../footer.ejs') %>
